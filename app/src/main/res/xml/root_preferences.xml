<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/messages_header">
        <DropDownPreference
            app:defaultValue="Raleway"
            app:entries="@array/fonts_entries"
            app:entryValues="@array/fonts_values"
            app:iconSpaceReserved="false"
            app:key="font_preference"
            app:title="Font type"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

    <PreferenceCategory
        app:title="Saving Option"
        app:iconSpaceReserved="false">

        <SwitchPreference
            app:defaultValue="false"
            app:key="save_preference"
            app:iconSpaceReserved="false"
            app:title="Auto Save"/>

    </PreferenceCategory>



</PreferenceScreen>
